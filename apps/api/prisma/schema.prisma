datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Watchlist {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  ticker    String
  createdAt DateTime  @default(now())
  
  @@unique([userId, ticker])
  @@index([userId])
  @@map("watchlists")
}
