# ====================================
# REQUIRED
# ====================================

# MongoDB connection string - Get from https://cloud.mongodb.com
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/stocks?retryWrites=true&w=majority"

# Finnhub API key - Get from https://finnhub.io (backend only)
FINNHUB_API_KEY="your_finnhub_api_key_here"

# ====================================
# FRONTEND
# ====================================

# API endpoint for web app to call
API_URL="http://localhost:3000/api"

# ====================================
# BACKEND (Optional - have defaults)
# ====================================

NODE_ENV="development"
PORT=3000

# Frontend URL - Web app runs on this port
WEB_URL="http://localhost:4200"
CORS_ORIGIN="http://localhost:4200"

# Logging level: error | warn | info | debug
LOG_LEVEL="info"

# ====================================
# AUTHENTICATION (OAuth - Optional)
# ====================================

# Google OAuth - Get from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID, set authorized redirect URI to: http://localhost:3000/api/auth/callback/google
# Note: Web app runs on http://localhost:4200 but OAuth callbacks go to API on port 3000
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth - Get from: https://github.com/settings/developers
# Create OAuth App, set authorization callback URL to: http://localhost:3000/api/auth/callback/github
# Note: Web app runs on http://localhost:4200 but OAuth callbacks go to API on port 3000
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
